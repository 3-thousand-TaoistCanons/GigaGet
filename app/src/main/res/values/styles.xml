<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.App.Base" parent="Theme.AppCompat.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/light_gray</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="windowActionBar">false</item>
		<item name="windowActionModeOverlay">true</item>
	</style>
	
	<style name="Theme.App.Blue" parent="Theme.App.Base">
		<item name="colorPrimary">@color/blue</item>
		<item name="colorPrimaryDark">@color/blue_dark</item>
	</style>
	
	<style name="Theme.App.Brown" parent="Theme.App.Base">
		<item name="colorPrimary">@color/brown</item>
		<item name="colorPrimaryDark">@color/brown_dark</item>
	</style>
	
	<style name="Theme.App.BlueGray" parent="Theme.App.Base">
		<item name="colorPrimary">@color/bluegray</item>
		<item name="colorPrimaryDark">@color/bluegray_dark</item>
	</style>
	
	<style name="Theme.App.Teal" parent="Theme.App.Base">
		<item name="colorPrimary">@color/teal</item>
		<item name="colorPrimaryDark">@color/teal_dark</item>
	</style>
	
	<style name="Theme.App.Cyan" parent="Theme.App.Base">
		<item name="colorPrimary">@color/cyan</item>
		<item name="colorPrimaryDark">@color/cyan_dark</item>
	</style>
</resources>
